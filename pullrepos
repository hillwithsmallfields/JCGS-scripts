#!/bin/bash

# If my directory variables aren't defined, run my shell setup.  This
# is aimed for use from cron.
if [ -z $OPEN_PROJECTS ]
then
    . $HOME/.bashrc
fi

for REPOFILE in ~/JCGS-emacs/.git ~/JCGS-org-mode/.git ~/JCGS-config/.git ~/JCGS-scripts/.git $(find $OPEN_PROJECTS -name .git)
do
    GITDIR=$(dirname $REPOFILE)
    cd $GITDIR
    echo Pulling $GITDIR
    git pull
done

$SCRIPTS/afterpull
