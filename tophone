#!/bin/bash

PHONE=${1-/mnt/phone-mmc}

PARTITION_SETUP=false
UNMOUNT=false

while true
do
    case $PHONE in
	-p)       PARTITION_SETUP=true
	          shift ;;
	/mnt/*)   break ;;
	/media/*) break ;;
	/dev/*)   if $PARTITION_SETUP
		  then
		      sudo parted $PHONE print
		  fi
		  sudo mount -o rw,uid=$USER $PHONE /mnt/phone-mmc
		  PHONE=/mnt/phone-mmc
		  UNMOUNT=true
		  break ;;
    esac
done

COMMON=$HOME/common
PRIVATE=/mnt/crypted

cp -rupv $HOME/finances $PHONE
# rsync -av $COMMON/
cp -upv $DROPBOX/Categorical_Imperative/*.org $DROPBOX/Categorical_Imperative/*.gnumeric $PHONE/Dropbox/Categorical_Imperative
cp -upv $DROPBOX/org/diary $PHONE/Dropbox/org/diary
cp -upv $ORG/*.org $PHONE/Dropbox/org
cp -upv $DROPBOX/languages/languages.deck $PHONE/Dropbox/languages
cp -upv $DROPBOX/health/*.gnumeric $PHONE/Dropbox/health/
if [ -d $PRIVATE/personal/journal ]
then
  cp -upv $PRIVATE/personal/journal/dates/for-diary $PHONE/common/tmp/for-diary
fi

if $UNMOUNT
then
    sudo umount $PHONE
fi
